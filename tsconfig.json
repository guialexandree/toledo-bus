{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"outDir": "dist",                                   /* Specify an output folder for all emitted files. */
    "module": "esnext",                                /* Specify what module code is generated. */
		"moduleResolution": "node",
		"jsx": "react",
		"esModuleInterop": true,                             /* Emit additional JavaScript to ease support for importing CommonJS modules. This enables `allowSyntheticDefaultImports` for type compatibility. */                                     /* Enable all strict type-checking options. */
    "baseUrl": "src",                                  /* Specify the base directory to resolve non-relative module names. */
    "rootDirs": ["src", "tests"],
		"resolveJsonModule": true,
    "sourceMap": true,
		"allowJs": true,
    "paths": {
        "@/tests/*": ["../tests/*"],
        "@/*": ["*"]
    },                                      /* Specify a set of entries that re-map imports to additional lookup locations. */
    "skipDefaultLibCheck": false,                      /* Skip type checking .d.ts files that are included with TypeScript. */
    "skipLibCheck": false,     
		"strictNullChecks": false                            /* Skip type checking all .d.ts files. */
  },
	"include": ["src"],
	"exclude": ["src/main/test/cypress", "cypress.config.js"]
}
